<Application x:Class="Shop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Shop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#AD7261"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Arial"/>
        </Style>
        <Style TargetType="Grid" >
            <Setter Property="Background" Value="#FFCFC2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#FF553026"/>
            <Setter Property="Background" Value="#FAB7A4"/>
            <Setter Property="BorderBrush" Value="#AD7261"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FAB7A4"/>
        </Style>
    </Application.Resources>
</Application>
